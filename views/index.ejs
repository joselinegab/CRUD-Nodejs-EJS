  <body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">Usuarios</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-12 mb-lg-0">
             
            </ul>
              <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <form action="/search" method="GET" class="d-flex form-inline" id="search-form" role="search">
                        <input  id="texto" oninput="submitForm()" name="texto" class="form-control mr-sm-2" type="search" placeholder="Buscar.." aria-label="Search">
                    </form>
                </li>
            </ul>
        </div>
        </div>
      </nav>
   <hr>
      <div class="container">
      <table id="user-table" class="table table-light table-striped">
        <thead>
            <tr class="bg-primary text-white">
                <th scope="col">ID</th>
                <th scope="col">USUARIO</th>
                <th scope="col">CONTRASEÑA</th>
                <th scope="col">ROL</th>
                <th scope="col">ACCIONES</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach((user)=>{ %>
            <tr>
                <td><%= user.id %></td>
                <td><%= user.usuario %></td>
                <td><%= user.pass %></td>
                <td><%= user.rol %></td>
                <td>
                    <a href="/edit/<%= user.id%>" class="btn btn-outline-primary"><i class='bx bxs-edit' ></i></a>
                    <a href="/delete/<%= user.id%>" class="btn btn-outline-danger"><i class='bx bxs-trash' ></i></a>
                </td>
            </tr>
           <% }) %> 
        </tbody>
      </table>
    </div>
    <div class="d-flex justify-content-center align-items-center">
        <a href="/create" class="btn btn-outline-success"><i class='bx bxs-plus-circle bx-md'></i></a>
      </div>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
